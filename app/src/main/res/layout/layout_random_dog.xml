<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="viewModel"
                  type="com.example.dogs.ui.fragment.randomDogImage.RandomDogImageViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:text="@string/woof"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/woofButton"
                android:clickable="true"
                android:layout_marginBottom="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.883" android:focusable="true"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/imageView"
                app:photo_link="@{viewModel.urlString.message}"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/woofButton"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription"/>
    </android.support.constraint.ConstraintLayout>
</layout>